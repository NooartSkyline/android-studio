<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cpe.kku.pong.csuav_app.LoginFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="250dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cs"
            android:id="@+id/imageView2"
            android:layout_weight="0.09" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:id="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="เข้าสู่ระบบ"
            android:id="@+id/textView"
            android:textColor="#ffff0000" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/editText1"
            android:textColor="#5f0489"
            android:hint="ใส่รหัสผู้ใช้"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/editText2"
            android:textColor="#ae20ef"
            android:hint="ใส่รหัสผ่าน"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="เข้าสู่ระบบ"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/btgreen"
                android:id="@+id/button1" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/btred"
                android:text="ออกโปรแกรม"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:id="@+id/button2" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
