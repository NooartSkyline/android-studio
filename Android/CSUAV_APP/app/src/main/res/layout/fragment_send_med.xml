<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cpe.kku.pong.csuav_app.SendMedFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:gravity="left"
        android:layout_width="383dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="รายละเอียดการร้องขอเวชภัณฑ์"
            android:textColor="#2709bc"
            android:textSize="24dp"
            android:gravity="fill_vertical"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/textView3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="380dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="เวชภัณฑ์:"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:id="@+id/textView2"
                android:textSize="18dp" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/spinner" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="41dp">

            <TextView
                android:text="จำนวน"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:text="1"
                android:id="@+id/editText2" />

            <Button
                android:text="เลือกเวชภัณฑ์"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/btgreen2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"
                android:id="@+id/button2" />
        </LinearLayout>

        <TextView
            android:text="รายละเอียดอื่นๆ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/textView6" />

        <EditText
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="30"
            android:textSize="18dp"
            android:id="@+id/editText1" />

        <Button
            android:text="ส่งคำร้องขอ"
            android:background="@drawable/btblue"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/button1" />


        <TextView
            android:text="รายการเวชภัณฑ์"
            android:layout_width="380dp"
            android:layout_height="20dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/textView4" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/listView1" />

    </LinearLayout>


</FrameLayout>
